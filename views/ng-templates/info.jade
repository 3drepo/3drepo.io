.col-md-12.bottom-info
	.col-sm-12.margined
		p Owner: {{Data.ProjectData.owner}}
	.col-sm-12.margined
		p
			i.fa.fa-tag
			b  REVISION
			span.block-header-project-name  {{Data.CurrentRevision.name}}
			span.block-header-by  by
			span.block-header-author  {{Data.CurrentRevision.author}}
			span.commit-date-title  {{Data.CurrentRevision.date}}
	p {{Data.CurrentRevision.message}}

	.col-sm-12.margined
		// Display the processed markdown from readme
		div(markdown='Data.ViewData.Readme.text')

	// Diff selector
	//.row.tight
		.btn-group.menu-button
			button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
				i.fa.fa-copy.menu-icon
				span.button-title Diff with:
				span.button-keyword {{data.current_diff.name}}
				span.caret
			ul.dropdown-menu(role='menu')
				li
					a(href='#/')
						span.button-keyword None
				li.divider
				li(ng-repeat='rev in data.revisions', ng-if='rev.name != current_revision.name')
					a(href='#/', ng-click='setDiffName(rev.name)')
						span.button-keyword {{rev.name}}

	form(role='form')
		button.btn.btn-success.pull-right(type='submit', disabled) Download
			i.fa.fa-download.menu-icon
