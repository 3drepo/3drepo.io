#wrap
	.container-fluid
		.row
			.col-md-12.padded-box
				// Left column
				.col-md-4.tight.gutter-right
					// Profile pic and name
					.col-md-12.tight
						.profile-pic
							img#picImg(ng-show="hasAvatar", ng-src='{{avatarURL}}')
							i.fa.fa-user(ng-show="!hasAvatar")
						.profile-box
							h1 {{userData.user.firstName}} {{userData.user.lastName}}
							p {{userData.user.email}}
					// Menu
					.col-md-12.tight
						.project-menu
							.project-menu-section(ng-class="{'project-menu-section-selected': isView('projects')}")
								a.tight(href='', ng-click="setView('projects')")
									h3
										i.fa.fa-home.menu-icon
										|  Projects
							.project-menu-section(ng-class="{'project-menu-section-selected': isView('settings')}")
								a.tight(href='', ng-click="setView('settings')")
									h3
										i.fa.fa-gear.menu-icon
										|  Settings
				// Main content
				.col-md-8.tight
					// Dashboard
					div(ng-show="view=='projects'")
						.col-xs-12.tight.gutter-right
							.block
								.col-xs-12.block-header
									h3 Accessible Projects
								.col-xs-12.tight(ng-repeat="project in userData.user.projects")
									.col-xs-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number 
											a(ng-href="{{'/' + project.account + '/' + project.project}}") {{'/' + project.account + '/' + project.project}}
					//div(ng-show="view=='dashboard'")
						.col-md-6.tight.gutter-right
							.block
								.col-sm-12.block-header
									h3 Recently Contributed
								.col-md-12.tight
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Project car 1
											a(href='#/')
											span.commit-by by 
											span.commit-author Tim
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Project car 2
											a(href='#/')
											span.commit-by by 
											span.commit-author Fred
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Project car 3
											a(href='#/')
											span.commit-by by 
											span.commit-author Jozef
						.col-md-6.tight
							.block
								.col-sm-12.block-header
									h3 Popular Projects
								.col-md-12.tight
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Helicopter
											a(href='#/')
											span.commit-by by
											span.commit-author Frederic
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Helicopter
											a(href='#/')
											span.commit-by by 
											span.commit-author Frederic
									.col-md-12.project-line
										i.fa.fa-cube.menu-icon
										span.commit-number Helicopter
											a(href='#/')
											span.commit-by by 
											span.commit-author Frederic
					// Projects
					//div(ng-if="view=='projects'")
						.col-md-12.tight(ng-repeat='project in userData.projects')
							.block
								.col-sm-12.block-header
									h3
										a.dashboard-tab(href='#', ng-click='goProject(project.account, project.project)')
											span.block-header-project-name {{project.project}} by 
											span.block-header-project-author {{project.account}}
								.clearfix
								.placeholder-screenshot
					// Discover
					//div(ng-if="view=='discover'")
						.col-md-12.tight
							.block
								.col-sm-12.block-header
									h3
										span.block-header-project-name Castle
										span.block-header-by by
										span.block-header-author Malcolm
								.clearfix
								.placeholder-screenshot
						.col-md-12.tight
							.block
								.col-sm-12.block-header
									h3
										span.block-header-project-name Motorbike
										span.block-header-by by
										span.block-header-author Yotam
								.clearfix
								.placeholder-screenshot
						.col-md-12.tight
							.block
								.col-sm-12.block-header
									h3
										span.block-header-project-name Hospital
										span.block-header-by by
										span.block-header-author Maciek
								.clearfix
								.placeholder-screenshot
					// Settings
					div(ng-if="view=='settings'")
						.col-xs-12.tight.gutter-right
							.block
								.col-xs-12.block-header.margined
									h3 Profile
										span.errorMessage {{errors.updateUserError}}
								form.standardform(role='form')
									.form-group
										.col-xs-12.margined
											label(for='settings-username') Username
											input#settings-username.form-control(ng-model='userData.username', type='text', disabled)
										.col-xs-6.margined
											label(for='settings-firstname') First Name
											input#settings-firstname.form-control(ng-model='userData.firstName', type='text')
										.col-xs-6.margined
											label(for='settings-lastname') Last Name
											input#settings-lastname.form-control(ng-model='userData.lastName', type='text')
										.col-xs-12.margined
											label(for='settings-email') Email Address
											input#settings-email.form-control(ng-model='userData.email', type='email')
										.col-xs-3.margined
											button.btn.btn-success(ng-click="updateUser()") Update
						.col-xs-12.tight.gutter-right
							.block
								.col-xs-12.block-header.margined
									h3 Change Password
										span.errorMessage {{errors.changePasswordError}}
								form.standardform(role='form')
									.form-group
										.col-xs-12.margined
											label(for='settings-email') Old Password
											input#settings-old-password.form-control(ng-model='passwords.oldPassword', type='password')
										.col-xs-12.margined
											label(for='settings-email') New Password
											input#settings-new-password.form-control(ng-model='passwords.newPassword', type='password')
										.col-xs-3.margined
											button.btn.btn-success(ng-click="changePassword()") Change Password

