.header(ng-controller='LoginCtrl')
	.container-fluid
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.bs-navbar-collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand.logo-pad.header-logo(href='../')
				img.v-expand(src='/public/images/logo.png')
		nav.collapse.navbar-collapse.bs-navbar-collapse(role='navigation')
			form.navbar-left.tight.v-expand(role='search')
				.form-group.tight
					input#search-box.form-control(type='text', placeholder='Search 3D Repo')
			a(href='http://blog.getbootstrap.com') Enterprise
			a(href='', ng-hide='!loggedIn', ng-click='logOut()') Log Out
			form.form-inline.tight.v-expand(ng-submit='login()')
				a.ng-hide(ng-hide='!loggedIn', href="{{'/' + user.username}}") {{user.username}}
				.form-group.tight
					input.ng-hide.form-control(ng-hide='loggedIn', ng-model='user.username', type='text', name='user', placeholder='Username')
					input.ng-hide.form-control(ng-hide='loggedIn', ng-model='user.password', type='password', name='pass', placeholder='Password')
					input.ng-hide(ng-hide='loggedIn', type='submit', value='login')
			a(href='http://blog.getbootstrap.com')
				img(src='/public/images/en.gif', height='16')
