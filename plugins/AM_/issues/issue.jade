md-content
	md-subheader(ng-click="is.toggleComments()") {{is.data.number}} {{is.data.name}} {{is.data.timeStamp}}

	div(ng-show="is.showComments", ng-class="{issueComments: is.toggleCommentsState}", comments-height, num-new-comments="is.numNewComments")
		div
			md-list
				md-list-item.md-3-line(ng-repeat="comment in is.data.comments")
					.md-list-item-text(layout="column")
						h3 {{comment.comment}}
						h4 {{comment.owner}}
						p {{comment.timeStamp}}
			panel-content-add(placeholder="New comment", on-save="is.saveComment(text)")

	md-divider