	#ui2-rightpanel-collapse-btn.pull-left.panel-collapse-btn(ng-click="toggleRightPanel()")
		i.fa.fa-list
	if ui.rightpanel
		ul.nav.nav-tabs
			each uicomp in ui.rightpanel
				li(ng-class='{active: currentTab == \'' + uicomp['name'] + '\'}')
					a(data-toggle="tab", ng-click='changeTab("' + uicomp['name'] + '")', href='#' + uicomp['name']) #{uicomp["name"]}
		.tab-content
			each uicomp in ui.rightpanel
				.tab-pane(id=uicomp.name, ng-class='{active: currentTab == \'' + uicomp['name'] + '\'}')
					!= renderMe(uicomp["template"], locals)

