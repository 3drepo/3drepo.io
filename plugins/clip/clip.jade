div(layout="column" layout-align="start center" flex)
	div(layout="row" layout-align="space-between" flex)
		label(flex="10") Axis:
		md-radio-group(ng-model="vm.selectedAxis" flex="85" layout="row")
			md-radio-button(ng-repeat="axis in vm.axes", value="{{axis}}", ng-disabled="!vm.visible") {{axis}}

	.clipSlider
		div(layout="row" layout-align="start center")
			md-slider(flex ng-model="vm.sliderPosition" step="{{vm.sliderStep}}" min="{{vm.sliderMin}}" max="{{vm.sliderMax}}" aria-label="Position" ng-disabled="!vm.visible")
			div
				input(flextype="number" ng-model="vm.sliderPosition" step="{{vm.sliderStep}}" min="{{vm.sliderMin}}" max="{{vm.sliderMax}}" ng-disabled="!vm.visible")
				| &nbsp;%