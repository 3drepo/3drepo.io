.container-fluid#project(global ng-if="!vm.state.bid4free")
	#project-viewport-container.row
		viewermanager

	#projectUI
		revisions(
			account="vm.account"
			project="vm.project"
			revision="vm.revision"
		)
		panel#leftPanel(
			account="vm.account"
			project="vm.project"
			branch="vm.branch"
			revision="vm.revision"
			position="left"
			style="pointer-events:{{vm.pointerEvents}}")
		panel#rightPanel(
			account="vm.account"
			project="vm.project"
			branch="vm.branch"
			revision="vm.revision"
			position="right"
			style="pointer-events:{{vm.pointerEvents}}")
		right-panel(style="pointer-events:{{vm.pointerEvents}}")
		bottom-buttons(style="pointer-events:{{vm.pointerEvents}}")
		qr-code-reader

