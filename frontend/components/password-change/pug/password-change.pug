.homeUserContent(layout="row", layout-align="center", flex)
	md-content.md-whiteframe-1dp(aria-label="Registered", flex="20")
		md-toolbar
			.md-toolbar-tools
				h2 Change Password
		.userContent(layout="column", layout-align="start")
			div(layout="column", ng-if="!vm.passwordChanged", flex)
				form(name="password")
					md-input-container.md-block
						label(ng-if="vm.passwordStrength !== undefined") New Password ({{vm.passwordStrength}})
						label(ng-if="vm.passwordStrength === undefined") New Password
						input(
							name="new"
							type="password"
							ng-model='vm.newPassword'
							ng-required
							ng-keypress="vm.passwordChange($event)")
					md-input-container.md-block
						label(ng-if="vm.registerMessage !== undefined") Confirm Password {{vm.registerMessage}}
						label(ng-if="vm.registerMessage === undefined") Confirm Password {{vm.registerMessage}}
						input(
							name="confirm"
							type="password"
							ng-model='vm.confirmPassword'
							ng-required
							ng-blur="vm.confirmPasswordInput($event)"
							ng-keypress="vm.passwordChange($event)")
				div(
					layout="row"
					layout-align="center center"
					flex="100")
					md-button.md-raised.md-accent(
						layout="row"
						flex="90"
						layout-align="center center"
						ng-disabled="vm.buttonDisabled"
						ng-click="vm.passwordChange()") Set Password
						
				div(layout="row", layout-align="start")
					h3(style="color:{{vm.messageColor}}") {{vm.message}}
					md-progress-circular(md-diameter="20px", ng-if="vm.showProgress", md-mode="indeterminate")

			div(layout="column", layout-align="start start", ng-if="vm.passwordChanged")
				p(style="color:{{vm.messageColor}}") {{vm.message}}
				md-button.md-raised.md-accent(ng-click="vm.goToLoginPage()") Login Page

