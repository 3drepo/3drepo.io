.homeUserContent(
	layout="row"
	layout-align="center"
	flex)

	md-content.md-whiteframe-1dp(
		flex-xs="90"
		flex-sm="55"
		flex-md="30"
		flex-lg="25"
		flex-xl="15"
		aria-label="Forgot Password")

		md-toolbar
			.md-toolbar-tools
				h2 Forgot password
		.userContent(layout="column")
			p Please enter your username and email
			md-input-container.md-block
				label Username
				input(type='text', ng-model='vm.username', ng-required, autofocus)
			md-input-container.md-block
				label Email
				input(type='text', ng-model='vm.email', ng-required, ng-keypress="vm.requestPasswordChange($event)")

			div(layout="column",layout-align="center center")

				md-button.md-raised.md-accent(
					flex="90"
					ng-click="vm.requestPasswordChange()") Request Password Change

				div(layout="row", layout-align="start center")
					h3(style="color:{{vm.messageColor}}") {{vm.message}}
					md-progress-circular(md-diameter="20px", ng-if="vm.showProgress", md-mode="indeterminate")