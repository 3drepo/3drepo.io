md-dialog.legalDialog(aria-label="Legal")
	md-toolbar
		.md-toolbar-tools
			h2 {{vm.legalTitle}}
			span(flex)
			md-button.md-icon-button(ng-click="closeDialog()")
				md-icon.angular-material-icons(aria-label="Close dialog") close
	md-content(ng-switch="vm.legalText")
		terms-and-conditions-text(ng-switch-when="termsAndConditions")
		privacy-text(ng-switch-when="privacy")
		cookies-text(ng-switch-when="cookies")