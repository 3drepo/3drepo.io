	div.homeHolder(
		layout="column"
		flex
		ng-if="!vm.state.changing && !vm.isLegalPage")

		top-menu(
			is-lite-mode="vm.isLiteMode"
			logo-url="vm.topLogo"
			on-lite-mode-change="vm.onLiteModeChange"
			on-logout="vm.logout"
			on-logo-click="vm.home"
		)
		div(
			ui-view=""
			flex="grow"
			layout="column"
		)

