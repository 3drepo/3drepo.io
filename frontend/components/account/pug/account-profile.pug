.homeUserContent.userContentNoMargin
	md-content.md-whiteframe-1dp(aria-label="Models", flex)
		md-toolbar
			.md-toolbar-tools
				h2 Profile
				span(flex)

		.userContent
			div(layout="column", flex)
				//h1.md-title Info
				div(layout="row", flex)
					md-input-container(flex="50")
						label Username
						input(ng-model="vm.username" ng-disabled="true")
				div(layout="row")
					md-input-container(flex)
						label First name
						input(ng-model="vm.firstNameNew")
					md-input-container(flex)
						label Last name
						input(ng-model="vm.lastNameNew")
				div(layout="row", flex)
					md-input-container(flex="50")
						label Email
						input(required, ng-model="vm.emailNew", type="email")
				.updateContainer(layout="row", layout-align="start center")
					md-button.md-raised.md-accent(
						ng-disabled="!vm.canUpdate()"
						ng-click="vm.updateInfo()" 
						flex-gt-md="20"
						flex-gt-lg="15"
						flex="80")  Update Profile
					p {{vm.infoSaveInfo}}
					p(ng-if="vm.updateError").updateError {{vm.updateError}}

			md-divider

			div(layout="column")
				//h1.md-title Password
				form(name="password" layout="row", flex)
					md-input-container(flex="50")
						label Old password
						input(ng-model="vm.oldPassword", type="password", required)
					md-input-container(flex="50")
						label(ng-if="vm.passwordStrength") New password ({{vm.passwordStrength}})
						label(ng-if="!vm.passwordStrength") New password 
						label(ng-if="vm.passwordStrength === undefined") New password
						input(name="new" ng-model="vm.newPassword", type="password", required)
				.updateContainer(layout="row", layout-align="start center")
					md-button.md-raised.md-accent(
						ng-disabled="vm.passwordUpdateDisabled()"
						ng-click="vm.updatePassword()"
						flex-gt-md="20"
						flex-gt-lg="15"
						flex="80") Update Password
					p {{vm.passwordSaveInfo}}
					p(ng-if="vm.passwordSaveError").updateError {{vm.passwordSaveError}}