#issuesListItemContent(layout='column')
	div(layout='row')
		#issueRoleIndicator
		.issueListItemThumbnail(layout="column", layout-align="center center")
			img(ng-if="vm.data.thumbnail", ng-src="{{vm.data.thumbnailPath}}")
			md-icon.angular-material-icons.issueListItemMissingThumbnail(ng-if="!vm.data.thumbnail") insert_photo
		div(flex, layout="column")
			label#issuesListItemTitle(flex="none", ng-class="{userRoleIssueListItemTitle: vm.assignedToUserRole}") {{vm.data.title}}
			#issuesListItemInfo(layout="row", layout-align="space-between center", flex="none")
				div(layout="row", layout-align="start start")
					md-icon.angular-material-icons#issueListItemStatus(
					ng-style="{'color': '{{ vm.getStatusColour(vm.data) }}' }") {{vm.getStatusIcon(vm.data)}}
					label(flex) {{vm.data.owner}}
				label {{vm.data.timeStamp}}
			#issuesListItemDescription
				label(ng-bind-html="vm.data.desc | linky:'_blank'") {{vm.data.desc}}
