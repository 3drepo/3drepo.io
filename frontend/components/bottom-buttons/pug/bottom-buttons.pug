div(
	layout="row"
	flex
	layout-align="space-between")


	// LEFT HAND SIDE BUTTTONS
	#leftButtons(ng-if="vm.showButtons", layout="row")
		span(ng-repeat="button in vm.leftButtons", ng-click="button.click()" layout="column")
			
			md-button.md-fab.md-mini.md-icon-button.md-accent.md-ink-ripple.actionButton(aria-label="{{button.label}}")
				svg(width="24px" height="24px" viewBox="0 0 24 24")
					path(fill="#ffffff" d="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z")
					
			label {{button.label}}
	

	// RIGHT HAND SIDE BUTTTONS
	#rightButtons(ng-if="vm.showButtons", layout="column" layout-align="center center")
		
