.colorPicker
	.colorPickerSelect(
		flex
		ng-click="vm.showPanel($event)"
		layout-fill
		layout="row"
		layout-align="start center")
		.colorPickerValue(
			ng-if="vm.color"
			ng-style="{'background-color': vm.ngModel}")

		.colorPickerPlaceholderValue(ng-if="!vm.color")

		.colorPickerPlaceholder(
			ng-if="vm.placeholder && !vm.color"
			flex
			layout="row"
			layout-align="start center") {{::vm.placeholder}}

		.colorPickerIcon(flex="none")
			md-icon.angular-material-icons arrow_drop_down