.homeUserContent(layout="row", layout-align="center")
	// Basic
	md-content.md-whiteframe-1dp(aria-label="Basic", flex="15")
		md-toolbar
			.md-toolbar-tools(layout-align="center center")
				h2 Basic
		.userContent(layout="column", layout-align="start center", layout-fill)
			md-icon.angular-material-icons.pricingIcon account_circle
			.pricingPrice(flex)
				h3.md-display-2.pricingPriceTitle Free
			md-divider(layout-fill)
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Demo Project
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Collaborate
			md-divider(layout-fill)
			div(layout="row", layout-align="center center", layout-fill)
				md-button.md-raised.md-accent(ng-click="vm.showPage('register')") Sign Up

	// Advanced
	md-content.md-whiteframe-8dp(aria-label="Advanced", flex="15")
		md-toolbar
			.md-toolbar-tools(layout-align="center center")
				h2#pricingMiddlePanelTitle Advanced
		.userContent(layout="column", layout-align="start center")
			md-icon.angular-material-icons.pricingIcon#pricingAdvancedIcon grade
			.pricingPrice(layout="column", layout-align="start center")
				div(layout="row", layout-align="center center")
					h3.md-display-2.pricingPriceTitle Â£100
				h3.md-subhead.pricingPriceSubtitle Per Month
			md-divider(layout-fill)
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 10Gb Server Space
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 5 Collaborators Per Project
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Unlimited Projects
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Collaborate
			md-divider(layout-fill)
			div(layout="row", layout-align="center center", layout-fill)
				md-button.md-raised.md-accent(ng-click="vm.showPage('register')") Sign Up

	// Enterprise
	md-content.md-whiteframe-1dp(aria-label="Enterprise", flex="15")
		md-toolbar
			.md-toolbar-tools(layout-align="center center")
				h2 Enterprise
		.userContent(layout="column", layout-align="start center")
			md-icon.angular-material-icons.pricingIcon language
			.pricingPrice
				h3.md-display-2.pricingPriceTitle Custom
			md-divider(layout-fill)
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Private Cloud
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Private Domain
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Unlimited Projects
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Unlimited Collaborators
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Custom Development
			md-divider(layout-fill)
			div(layout="row", layout-align="center center", layout-fill)
				md-button.md-raised.md-accent(ng-click="vm.showPage('contact')") Get In Touch
