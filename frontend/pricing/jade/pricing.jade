.homeUserContent(layout="row", layout-align="center")
	// Basic
	md-content.md-whiteframe-1dp(aria-label="Basic", flex-lg="20", flex-gt-lg="15")
		md-toolbar
			.md-toolbar-tools(layout="row", layout-align="center center")
				h2 Basic
		.userContent.pricingContent(layout="column", layout-align="start center")
			md-icon.angular-material-icons.pricingIcon(flex="none") account_circle
			.pricingPrice(flex="none")
				h3.md-display-2.pricingPriceTitle Free
			md-divider
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 200 MB Server Space
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Demo Project
			md-divider
			div(layout="row", layout-align="center center")
				md-button.md-raised.md-accent(ng-click="vm.showPage('signUp')") Sign Up

	// Advanced
	md-content.md-whiteframe-8dp(aria-label="Advanced", flex-lg="20", flex-gt-lg="15")
		md-toolbar
			.md-toolbar-tools(layout="row", layout-align="center center")
				h2#pricingMiddlePanelTitle Advanced
		.userContent.pricingContent(layout="column", layout-align="start center")
			md-icon.angular-material-icons.pricingIcon#pricingAdvancedIcon(flex="none") grade
			.pricingPrice(layout="column", layout-align="start center", flex="none")
				h3.md-display-2.pricingPriceTitle Â£100
				h3.md-subhead.pricingPriceSubtitle Per Month
			md-divider
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 10 GB Server Space
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Unlimited Projects
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Collaboration
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Demo Project
			md-divider
			div(layout="row", layout-align="center center")
				md-button.md-raised.md-accent(ng-click="vm.showPage('signUp', true)") Sign Up

	// Enterprise
	md-content.md-whiteframe-1dp(aria-label="Enterprise", flex-lg="20", flex-gt-lg="15")
		md-toolbar
			.md-toolbar-tools(layout="row", layout-align="center center")
				h2 Enterprise
		.userContent.pricingContent(layout="column", layout-align="start center")
			md-icon.angular-material-icons.pricingIcon(flex="none") language
			.pricingPrice(flex="none")
				h3.md-display-2.pricingPriceTitle Custom
			md-divider
			.pricingInfo(layout="column", layout-align="start")
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Private Cloud
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Private Domain
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Unlimited Projects
				.pricingInfoLine(layout="column", layout-align="start center")
					md-icon.angular-material-icons stars
					h3 Custom Development
			md-divider
			div(layout="row", layout-align="center center")
				md-button.md-raised.md-accent(ng-click="vm.showPage('contact')") Get In Touch
