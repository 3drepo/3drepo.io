{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "types": [
      "react",
      "react-dom",
      "lodash",
      "node"
    ],
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "es2020.string"
    ],
    "jsx": "react",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/v5/ui/components/*"],
      "@selectors/*": ["src/v5/store/common/selectors/*"],
      "@assets/*": ["./assets/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "tests",
    "internals",
    "components"
  ],
}
