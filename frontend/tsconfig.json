{
  "compilerOptions": {
	"isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "types": [
      "react",
      "react-dom",
      "lodash",
      "node",
      "jest",
      "webpack-env" 
    ],
    "lib": [
      "es2015",
      "es2019",
      "dom",
      "es2020.string",
      "es2021.string",
      "es2022.Array",
      "WebWorker"
    ],
    "jsx": "react-jsx",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/v5/ui/components/*"],
      "@controls/*": ["./src/v5/ui/controls/*"],
      "@assets/*": ["./assets/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "internals",
    "components"
  ]
}
