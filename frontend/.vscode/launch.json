	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Test in current file",
			"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			"args": [
			  "${fileBasename}",
			  "--verbose",
			  "-i",
			  "--no-cache",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Launch Chrome",
			"url": "https://3drepo.lan",
			"webRoot": "${workspaceFolder}"
		}
	]
}