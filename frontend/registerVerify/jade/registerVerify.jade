.homeUserContent(layout="row", layout-align="center", flex)
	md-content.md-whiteframe-1dp(aria-label="Registered", flex="30")
		md-toolbar
			.md-toolbar-tools
				h2 Registered for 3D Repo
		.userContent(layout="column")
			h3(ng-if="!vm.verified") {{vm.verifyErrorMessage}}
			div(ng-if="vm.verified", layout="column", layout-align="start")
				h3 {{vm.verifySuccessMessage}}
				div(layout="row")
					md-button.md-raised.md-accent(ng-click="vm.goToLoginPage()") Go To Login Page
				div(ng-if="vm.pay", layout="column")
					h3 Or continue with payment
					form(action="https://www.sandbox.paypal.com/cgi-bin/webscr", method="post", ng-submit="vm.setupPayment($event)")
						input(type="hidden", name="cmd", value="_s-xclick")
						input(type="hidden", name="hosted_button_id", value="ETZVXP3F4Q4GE")
						input(type="hidden", name="custom", value="{{vm.newDatabaseToken}}")
						input(type="hidden", name="return", value="{{vm.paypalReturnUrl}}")
						div(layout="row", layout-align="start center")
							md-button.md-accent.md-raised(type="submit", ng-disabled="vm.showPaymentWait") Pay
							div(ng-if="vm.showPaymentWait", layout="row", layout-align="start center")
								p Please wait...
								md-progress-circular(md-mode="indeterminate", md-diameter="20")
