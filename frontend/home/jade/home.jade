img#homeBackground(src="/public/images/viewer_background.jpg")
#legalLinks(layout="row")
	md-button.md-primary(ng-repeat="display in vm.legalDisplays", ng-click="vm.legalDisplay($event, display)") {{display.title}}

#homeLogo
	img(src="/public/images/3drepo-logo-white.png")

div(ng-show="!vm.state.changing")
	div(ng-show="!vm.state.loggedIn")
		div(ng-show="vm.getLoggedOutUrl()" ng-include="vm.getLoggedOutUrl()")
		#homeLoggedOut(ng-show="!vm.getLoggedOutUrl()")

	div(ng-show="vm.state.loggedIn")
		div(ng-show="vm.getLoggedInUrl()" ng-include="vm.getLoggedInUrl()")
		div(ng-show="!vm.getLoggedInUrl()")
			#homeLoggedIn
			account-dir(account='vm.state.account', state='vm.state', ng-if="vm.goToAccount", show="vm.showAccount")
