md-dialog.newProjectDialog(aria-label="New project")
	md-toolbar
		.md-toolbar-tools
			h2 Upload - {{vm.project.name}}
			span(flex)
			md-button.md-icon-button(ng-click="vm.closeDialog()")
				md-icon.angular-material-icons(aria-label="Close dialog") close
	md-content(layout-margin)
		div(layout="column")

			md-input-container
				input(placeholder="Revision name", ng-model="vm.uploadTag")
			md-input-container
				textarea(placeholder="Revision description", ng-model="vm.uploadDesc")

			md-input-container
				md-button.md-accent(ng-click="vm.selectFile()") Select File
				md-button.md-raised.md-accent(ng-disabled="vm.newProjectButtonDisabled", ng-click="vm.uploadFile()") Upload
			#projectDialogFilenameContainer(layout="row", ng-if="vm.selectedFile")
				p#projectDialogFilenameIntro Selected file
				p#projectDialogFilename {{vm.selectedFile.name}}
