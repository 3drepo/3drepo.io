account-menu
div(ng-if="!vm.showProject")
	#account(layout="row")
		account-info(
			username="vm.username"
			first-name="vm.firstName"
			last-name="vm.lastName"
			email="vm.email"
			on-show-item="vm.showItem(item)"
		)
		#accountItem(ng-switch="vm.itemToShow")
			account-projects(
				account="vm.account"
				accounts="vm.accounts"
				go-to-billing-page="vm.showBillingPage"
				ng-switch-when="repos"
			)
			account-profile(
				username="vm.username"
				first-name="vm.firstName"
				last-name="vm.lastName"
				email="vm.email"
				ng-switch-when="profile"
			)
			account-billing(
				ng-switch-when="billing"
			)

div(ng-if="vm.showProject")
	project(account="vm.state.account" project="vm.state.project" branch="vm.state.branch" revision="vm.state.revision" state="vm.state")
